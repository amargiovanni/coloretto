---
interface Props {
    title: string;
    showHome?: boolean;
}

const { title, showHome = true } = Astro.props;
---

<header class="header">
    <div class="header-left">
        {showHome && (
            <a href="/" class="btn btn-home" aria-label="Home">
                <svg viewBox="0 0 24 24">
                    <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
                </svg>
            </a>
        )}
        <h1>{title}</h1>
    </div>
    <div class="header-right">
        <slot />
    </div>
</header>
