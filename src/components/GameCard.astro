---
interface Props {
    href: string;
    title: string;
    colorClass: string;
}

const { href, title, colorClass } = Astro.props;
---

<a href={href} class={`game-card ${colorClass}`}>
    <div class="game-icon">
        <slot />
    </div>
    <h2>{title}</h2>
</a>

<style>
    .game-card {
        aspect-ratio: 1;
        background: white;
        border-radius: 25px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        text-decoration: none;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
        gap: 15px;
    }

    .game-card:active {
        transform: scale(0.95);
    }

    .game-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 50px rgba(0,0,0,0.3);
    }

    .game-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .game-icon :global(svg) {
        width: 50px;
        height: 50px;
        fill: white;
    }

    .game-card h2 {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1f2937;
        text-align: center;
    }

    /* Colors */
    .game-coloretto .game-icon {
        background: linear-gradient(145deg, #ec4899, #db2777);
    }
    .game-memory .game-icon {
        background: linear-gradient(145deg, #3b82f6, #2563eb);
    }
    .game-forme .game-icon {
        background: linear-gradient(145deg, #22c55e, #16a34a);
    }
    .game-conta .game-icon {
        background: linear-gradient(145deg, #f59e0b, #d97706);
    }
    .game-vesti .game-icon {
        background: linear-gradient(145deg, #14b8a6, #0d9488);
    }
    .game-puzzle .game-icon {
        background: linear-gradient(145deg, #f43f5e, #e11d48);
    }

    /* Responsive */
    @media (max-width: 400px) {
        .game-card {
            padding: 15px;
            border-radius: 20px;
        }
        .game-icon {
            width: 60px;
            height: 60px;
        }
        .game-icon :global(svg) {
            width: 36px;
            height: 36px;
        }
        .game-card h2 {
            font-size: 0.95rem;
        }
    }

    @media (min-width: 768px) {
        .game-card {
            padding: 25px;
            gap: 15px;
        }
        .game-icon {
            width: 80px;
            height: 80px;
        }
        .game-icon :global(svg) {
            width: 48px;
            height: 48px;
        }
        .game-card h2 {
            font-size: 1.1rem;
        }
    }

    @media (min-width: 1024px) {
        .game-card {
            padding: 30px;
            gap: 18px;
        }
        .game-icon {
            width: 100px;
            height: 100px;
        }
        .game-icon :global(svg) {
            width: 60px;
            height: 60px;
        }
        .game-card h2 {
            font-size: 1.3rem;
        }
    }

    @media (orientation: landscape) and (max-height: 500px) {
        .game-card {
            aspect-ratio: auto;
            padding: 12px;
            gap: 8px;
        }
        .game-icon {
            width: 45px;
            height: 45px;
        }
        .game-icon :global(svg) {
            width: 26px;
            height: 26px;
        }
        .game-card h2 {
            font-size: 0.75rem;
        }
    }
</style>
